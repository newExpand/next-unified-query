{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["next-example"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120,
		"indentWidth": 2
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noConfusingVoidType": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off",
				"noUselessCatch": "off"
			},
			"style": {
				"useImportType": "off",
				"noInferrableTypes": "off",
				"noNonNullAssertion": "off",
				"useNumberNamespace": "off",
				"useConst": "off",
				"noUselessElse": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		},
		"include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts", "test/**/*.tsx"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
