{
	"name": "next-unified-query",
	"version": "0.2.0",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./react": {
			"types": "./dist/react.d.ts",
			"import": "./dist/react.mjs",
			"require": "./dist/react.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit && cd test && tsc --noEmit"
	},
	"keywords": [
		"next.js",
		"react",
		"react-query",
		"tanstack-query",
		"fetch",
		"http-client",
		"hooks",
		"typescript",
		"query-management",
		"state-management"
	],
	"author": "newExpand",
	"license": "MIT",
	"description": "React hooks and components for next-unified-query-core",
	"dependencies": {
		"es-toolkit": "^1.38.0",
		"next-unified-query-core": "workspace:*"
	},
	"peerDependencies": {
		"react": "^18.3.1 || ^19.0.0",
		"react-dom": "^18.3.1 || ^19.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.3.0",
		"@types/react": "^18.3.23",
		"@types/react-dom": "^18.3.7",
		"@vitest/coverage-v8": "3.1.2",
		"jsdom": "^26.1.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tsup": "^8.4.0",
		"typescript": "^5.8.3",
		"vitest": "^3.1.2"
	},
	"files": [
		"dist",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/newExpand/next-unified-query.git",
		"directory": "packages/react"
	}
}
