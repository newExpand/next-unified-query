{
	"name": "next-unified-query-workspace",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"build": "pnpm run --filter \"./packages/*\" build",
		"build:all": "pnpm run -r build",
		"build:core": "pnpm run --filter ./packages/core build",
		"build:react": "pnpm run --filter ./packages/react build",
		"test": "pnpm run -r test",
		"test:watch": "pnpm run -r test:watch",
		"test:coverage": "pnpm run -r test:coverage",
		"test:core": "pnpm run --filter next-unified-query-core test",
		"test:react": "pnpm run --filter next-unified-query test",
		"lint": "pnpm run -r lint",
		"format": "pnpm run -r format",
		"typecheck": "pnpm run -r typecheck",
		"dev": "pnpm run --filter example dev",
		"validate": "pnpm lint && pnpm format && pnpm typecheck && pnpm test && pnpm build",
		"pack:core": "cd packages/core && pnpm build && npm pack",
		"pack:react": "cd packages/react && pnpm build && npm pack", 
		"pack:all": "pnpm build && pnpm pack:core && pnpm pack:react",
		"test:pack": "pnpm pack:all && pnpm test:pack:install && pnpm test:pack:example",
		"test:pack:install": "node scripts/install-packed.js",
		"test:pack:example": "cd apps/example && pnpm remove next-unified-query next-unified-query-core 2>/dev/null || true && pnpm install && pnpm build && pnpm test:e2e",
		"test:pack:clean": "node scripts/clean-packed.js"
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^22.15.3",
		"@types/react": "^19.1.5",
		"@vitest/coverage-v8": "3.1.2",
		"jsdom": "^26.1.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tsup": "^8.4.0",
		"typescript": "^5.8.3",
		"vitest": "^3.1.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/newExpand/next-unified-query.git"
	}
}
